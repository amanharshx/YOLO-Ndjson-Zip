{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YOLO NDJSON Converter",
  "version": "0.3.6",
  "identifier": "com.ndjson.converter",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/amanharshx/yolo-ndjson-zip/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVCNThBNTYxMjM1MDFDRTAKUldUZ0hGQWpZYVZZVytKczA2TEZKbysrYUpSaXJUQm96djdqK0FWbXV3b2l4bGN0TTkxMGFhRUoK"
    }
  },
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "YOLO NDJSON Converter",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 600,
        "minHeight": 500,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset:; img-src 'self' asset: data: blob:; connect-src 'self' ipc: http://ipc.localhost; style-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
